WindowManager:
	IndexWindow:
	AboutWindow:
	JournalWindow:
	WheelOfLifeWindow:
	IntensityWindow:
	EnvironmentWindow:
	ChainLinkWindow:
	FinishWindow:
	DictionaryWindow:

<IndexWindow>:
	name: "first"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 50
		spacing: 20
        Label:
            id: "title"
            text: "The Tambolian Oracle"
            font_size: 48
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'
        Label:
            id: "subtitle"
            text: "The Truth is not hidden, just deeply unnoticed"
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            halign: 'center'
            valign: 'middle'
        RoundedButton:
            text: "Oracle"
            font_size: 32
            size_hint: None, None
            size: 200, 50
            on_release:
                app.root.current = "fourth"
                root.manager.transition.direction = "left"
        RoundedButton:
            text: "Journal"
            font_size: 32
            size_hint: None, None
            size: 200, 50

            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "up"
        RoundedButton:
            text: "Dictionary"
            font_size: 32
            size_hint: None, None
            size: 200, 50

            on_release:
                app.root.current = "tenth"
                root.manager.transition.direction = "down"
        RoundedButton:
            text: "About"
            font_size: 32
            size_hint: None, None
            size: 200, 50
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"
<RoundedButton@Button>:
    background_color:(0,0,0,0)
	background_normal: ''
    canvas.before:
        Color:
            rgba: (111/255, 147/255, 137/255, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30]  # border radius


<AboutWindow>:
    name: "second"
    BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height

		Label:
			text: "about screen"
			font_size: 32

		Button:
		    #'go back home button'
		    text: "Home"
		    background_normal: ''
            background_color: (78/255, 69/255, 57/255, 1)
			font_size: 12
			size_hint: (.1, .1)
            pos: (10, 10)
            pos_hint: {'center_x':0.1, 'center_y':0.1}
			height: 10
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"

			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"

<JournalWindow>:
    name: "third"

    FloatLayout:
		orientation: 'vertical'
		size: root.width, root.height

		Label:
			text: "Journal"
			font_size: 32
            size_hint: None, None
            size: 150, 50
            pos_hint: {'center_x':0.5, 'center_y':0.9}
        Button:
            text: "New entry"
            font_size: 16
            size_hint: None, None
            size: 150, 50
            pos_hint: {'center_x':0.5, 'center_y':0.7}
            on_release:
                text_input.opacity = 1
                save_button.opacity  = 1
        TextInput:
            id: text_input
            opacity: 0
            multiline: False
            size_hint: None, None
            size: root.height/2, root.height/3
            pos_hint: {'center_x':0.5, 'center_y':0.4}

		Button:
		    #'save button'
		    id: save_button
		    text: "save"
		    opacity: 0
			font_size: 12
			size_hint: (.1, .1)
            pos: (10, 10)
            pos_hint: {'center_x':0.5, 'center_y':0.1}
			height: 10
			on_release: root.save_data(self)

		Button:
			text: "go back"
			font_size: 12
			size_hint: (.1, .1)
            pos: (10, 10)
            pos_hint: {'center_x':0.1, 'center_y':0.1}
			height: 15
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"

			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "down"


<WheelOfLifeWindow>:
    name: "fourth"

    FloatLayout:
		orientation: 'vertical'
		size: root.width, root.height

		Label:
			text: "Wheel of life"
			font_size: 32
			pos_hint: {'center_x':0.5, 'center_y':0.9}
		Label:
		    text: "Relax - take a breath - ask a question."
		    font_size: 26
		    halign: "center"
            valign: "middle"
            size: root.height/3, root.height/2
            pos_hint: {'center_x':0.5, 'center_y':0.8}
        TextInput:
            id: text_input
            hint_text: "Ask a question"
            size_hint: None, None
			size: root.height/3, root.height/3
			pos_hint: {'center_x':0.5, 'center_y':0.5}

		Button:
		    #roll the dice button
		    id: dice_roll
		    text: "roll the dice"
		    font_size: 20
		    size: 125, 50
            size_hint: None, None
            pos_hint: {'center_x':0.5, 'center_y':0.2}
			on_press:
			    root.press(),
			    root.save_data(),
			    next_roll.opacity = 1
		Label:
            id: result_label
            text: ''
		    font_size: 50
            size_hint: None, None
            pos_hint: {'center_x':0.5, 'center_y':0.5}
		Button:
		    #'go back home button'
		    text: "home"
			font_size: 12
			size_hint: (.1, .1)
            pos: (10, 10)
            pos_hint: {'center_x':0.1, 'center_y':0.1}
			height: 10
			on_release:
				app.root.current = "first"
				root.manager.transition.direction = "right"
		Button:
		    #button can be hidden or more opaque until touched
			text: "next roll"
			id: next_roll
			opacity: 0
			font_size: 16
		    size: 125, 50
            size_hint: None, None
            pos_hint: {'center_x':0.5, 'center_y':0.1}
			height: 10
			on_release:
				app.root.current = "sixth"
				root.manager.transition.direction = "left"
		Button:
		    #the journal button
		    text: "journal"
		    font_size: 12
		    size_hint: .1, .1
            pos: root.width/4, 10
            pos_hint: {'center_x':0.9, 'center_y':0.1}
            on_release:
                app.root.current = "fifth"
                root.manager.transition.direction = "up"

